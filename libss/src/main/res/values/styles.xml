<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="textHeaderColor">#000000</item>
        <item name="textSecondColor">#606060</item>
        <item name="textTitleColor">#000000</item>
        <item name="bgColor">#ffffff</item>
        <item name="cardColor">#fff</item>
        <item name="bgMessage">@color/rippleLight</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/bgColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">?attr/textTitleColor</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="textHeaderColor">#ffffff</item>
        <item name="textSecondColor">#aeaeae</item>
        <item name="textTitleColor">#ffffff</item>
        <item name="bgColor">#000000</item>
        <item name="cardColor">#212124</item>
        <item name="bgMessage">#ffffff</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/bgColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">?attr/textTitleColor</item>
    </style>

</resources>
